{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}