{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "lib",
    "rootDir": "src",
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}